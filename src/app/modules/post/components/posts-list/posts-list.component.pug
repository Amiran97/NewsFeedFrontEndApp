.posts(*ngIf="postsList$ | async as postsList")
  .create-post.d-flex.justify-content-center
    button.btn.btn-success.mt-2.bi.bi-plus-lg.rounded(*ngIf='accountFacade.isAuthenticated$() | async' type='button', [routerLink]="['/create']") Post
  .post-item.d-flex.justify-content-center(*ngFor='let post of postsList')
    app-post-item([post]='post', (navToNextPost)="navToNextPost($event)")
  .no-data.d-flex.justify-content-center.w-100(*ngIf='postsList.length == 0')
    span.px-2.py-2.border.rounded.bg-light No data found